{
  "version": 2,
  "buildCommand": "pip3 install -r requirements.txt && python3 manage.py collectstatic --noinput",
  "builds": [
    {
      "src": "bank_app/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12.0"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "bank_app/wsgi.py"
    }
  ]
}
